<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="opeuser">

<select id="selectUser" parameterType="int" resultType="com.mybatis.entity.Users">
	select * from user where id = #{id}
</select>
<resultMap id="userResultMap" type="Users">
<result property="usernames" column="username"/>
</resultMap>
<select id="selectUserAll" resultType="Users">
	select id as "id",
	username,
	pwd as "pwd",
	email as "email",
	phone as "phone" from user
</select>
<insert id="insertuser" parameterType="com.mybatis.entity.Users" >
	insert into user(username,pwd,email,phone) values(#{username},#{pwd},#{email},#{phone})
</insert>
</mapper>